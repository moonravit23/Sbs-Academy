for (int a = 0; a < 5; a++)
{
    for (int c = 0; c < 9 - a; c++)
    {
        Console.Write(" ");
    }

    for (int j = 0; j <= 2 * a; j++)
    {
        Console.Write("*");
    }
    Console.WriteLine();
}


for (int a = 0; a < 5; a++)
